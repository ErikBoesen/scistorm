<li id="post-<%= post.id %>">
    <div class="votes">
        <div class="upvote"></div>
        <div class="downvote"></div>
    </div>
    <%= link_to "Dislike", dislike_post_path(post), class: 'vote', method: :put %>
    <%= link_to "Like", like_post_path(post), class: 'vote', method: :put %>
    <span> Â· </span>

    <%= post.get_likes.size %> users like this

    <span class="user">
        <%= link_to gravatar_for(post.user, size: 50), post.user %>
        <div>
            <%= link_to post.user.name, post.user %>
            <%= link_to '@' + post.user.username, post.user %>
            <span class="icon-clock"></span>
            <span class="timestamp"><%= time_ago_in_words(post.created_at).gsub('about ','') %></span>
        </div>
    </span>

    <span class="content"><%= post.content %></span>

    <% if current_user?(post.user) %>
        <%= link_to "", post, method: :delete, class: 'icon-delete', data: { confirm: "Are you sure?" } %>
    <% end %>
</li>
